<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginBottom="16dp"
        android:src="@drawable/my_avatar"
        android:scaleType="centerCrop"
        android:contentDescription="@string/my_avatar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="16dp"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_medone"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/icon_med_one"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/lcd_med_one_product_manager"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_medone"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/icon_med_one"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/android_developer"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/about_me"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/enter_your_message"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="16dp"
                android:background="@color/transparent"
                android:text="@string/send_message" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ibtn_linkedin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/linkedin"
                    android:contentDescription="@string/linkedin"/>

                <ImageButton
                    android:id="@+id/ibtn_instagram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/instagram"
                    android:contentDescription="@string/instagram"/>

                <ImageButton
                    android:id="@+id/ibtn_vkontakte"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vk"
                    android:contentDescription="@string/vkontakte"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>